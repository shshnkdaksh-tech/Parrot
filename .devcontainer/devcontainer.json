{
    "name": "Parrot Security Full",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "remoteUser": "root",
    "runArgs": [
        "--cap-add=NET_RAW",
        "--cap-add=NET_ADMIN",
        "--privileged"
    ],
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "ms-python.python",
        "ms-vscode.cpptools"
    ],
    "postCreateCommand": "echo 'Parrot Security DevContainer Ready!'"
}
