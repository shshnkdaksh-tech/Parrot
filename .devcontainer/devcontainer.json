{
  "name": "Parrot Security Codespace",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "ms-vscode.cpptools",
    "ms-python.python",
    "ms-azuretools.vscode-docker"
  ],
  "forwardPorts": [8080, 3000],
  "postCreateCommand": "sudo apt update && sudo apt install -y nmap hydra john"
}
